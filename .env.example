# T006: Environment Variables Template
# Copy this file to .env.local and fill in the values

# ===========================================
# Firebase Client (Public - exposed to browser)
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=seu-projeto
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# ===========================================
# Firebase Admin (Private - server-side only)
# ===========================================
FIREBASE_ADMIN_PROJECT_ID=seu-projeto
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxx@seu-projeto.iam.gserviceaccount.com
# Note: Use \n for newlines in the private key
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"

# ===========================================
# Asaas Payment Gateway
# ===========================================
# Get your API key from: https://sandbox.asaas.com/apiIntegrations/index
ASAAS_API_KEY=sua_api_key_aqui
# Environment: 'sandbox' for testing, 'production' for live
ASAAS_ENVIRONMENT=sandbox
# Get webhook token from: Asaas Dashboard > Integrations > Webhooks
ASAAS_WEBHOOK_TOKEN=seu_webhook_token_aqui

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
