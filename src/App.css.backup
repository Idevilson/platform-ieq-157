.evento-container {
  min-height: 100vh;
  width: 100%;
  background-color: var(--bg-primary);
}

/* Header */
.evento-header {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  border-bottom: 3px solid var(--accent-orange);
}

.capa-evento {
  width: 100%;
  max-height: 500px;
  object-fit: cover;
  opacity: 0.4;
}

.header-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  width: 100%;
  padding: 2rem;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(10px);
  border-top: 2px solid var(--accent-orange);
  border-bottom: 2px solid var(--accent-orange);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.logo-ieq-header {
  width: 120px;
  height: auto;
  filter: drop-shadow(0 4px 12px rgba(255, 107, 53, 0.6));
  margin-bottom: 0.5rem;
  animation: fadeIn 1s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-content h1 {
  font-size: 3.5rem;
  color: #fff;
  text-shadow: 3px 3px 12px rgba(255, 107, 53, 0.5);
  margin: 0;
  font-weight: bold;
  letter-spacing: 3px;
}

.tema-evento {
  margin: 1.5rem 0;
  padding: 1rem 0;
  border-top: 1px solid rgba(255, 107, 53, 0.3);
  border-bottom: 1px solid rgba(255, 107, 53, 0.3);
}

.tema-evento h2 {
  font-size: 3rem;
  color: var(--accent-orange);
  text-shadow: 0 0 20px rgba(255, 107, 53, 0.6);
  margin: 0;
  font-weight: bold;
  letter-spacing: 4px;
  text-transform: uppercase;
}

.subtema {
  font-size: 1.3rem;
  color: var(--accent-gold);
  font-style: italic;
  margin: 0.5rem 0 0 0;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
  font-weight: 500;
}

.data-evento {
  margin-top: 1rem;
}

.data-evento p {
  font-size: 1.8rem;
  color: var(--accent-gold);
  font-weight: 600;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
  margin: 0;
}

/* Main */
.evento-main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 3rem 2rem;
}

/* Palestrantes */
.palestrantes-section {
  margin-bottom: 4rem;
}

.palestrantes-section h2 {
  text-align: center;
  font-size: 2.5rem;
  color: var(--text-primary);
  margin-bottom: 3rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-shadow: 2px 2px 8px rgba(255, 107, 53, 0.3);
  border-bottom: 3px solid var(--accent-orange);
  padding-bottom: 1rem;
  display: inline-block;
  width: 100%;
}

.palestrantes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.palestrante-card {
  background: var(--bg-secondary);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.palestrante-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 32px rgba(255, 107, 53, 0.3);
  border-color: var(--accent-orange);
}

.palestrante-foto {
  width: 100%;
  height: 350px;
  object-fit: contain;
  background: var(--bg-tertiary);
  border-bottom: 2px solid var(--accent-orange);
  padding: 0.5rem;
}

.palestrante-info {
  padding: 1.5rem;
  text-align: center;
  background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
}

.palestrante-info h3 {
  font-size: 1.5rem;
  color: var(--text-primary);
  margin: 0 0 0.5rem 0;
  font-weight: bold;
}

.palestrante-info .cargo {
  font-size: 1rem;
  color: var(--text-secondary);
  margin: 0.5rem 0;
  font-style: italic;
}

.palestrante-info .tema {
  font-size: 1.1rem;
  color: var(--accent-orange);
  margin: 0.5rem 0;
  font-weight: 600;
  padding-top: 0.5rem;
  border-top: 1px solid rgba(255, 107, 53, 0.3);
}

/* Local do Evento */
.local-section {
  margin-top: 4rem;
  margin-bottom: 4rem;
  padding-top: 3rem;
  border-top: 3px solid var(--accent-orange);
}

.local-section h2 {
  text-align: center;
  font-size: 2.5rem;
  color: var(--text-primary);
  margin-bottom: 3rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-shadow: 2px 2px 8px rgba(255, 107, 53, 0.3);
  border-bottom: 3px solid var(--accent-orange);
  padding-bottom: 1rem;
  display: inline-block;
  width: 100%;
}

.local-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  align-items: start;
}

.local-info {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 107, 53, 0.2);
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.info-item {
  display: flex;
  gap: 1.5rem;
  align-items: flex-start;
}

.info-icon {
  font-size: 3rem;
  min-width: 3rem;
}

.info-item h3 {
  color: var(--accent-orange);
  font-size: 1.5rem;
  margin: 0 0 1rem 0;
  text-shadow: 0 0 10px rgba(255, 107, 53, 0.3);
}

.info-item p {
  color: var(--text-secondary);
  margin: 0.3rem 0;
  font-size: 1.1rem;
  line-height: 1.6;
}

.btn-maps {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.8rem;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--accent-orange) 0%, #ff8c42 100%);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(255, 107, 53, 0.4);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.btn-maps:hover {
  background: linear-gradient(135deg, #ff8c42 0%, var(--accent-orange) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 107, 53, 0.6);
  text-decoration: none;
}

.maps-icon {
  font-size: 1.5rem;
}

.mapa-container {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 1rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 107, 53, 0.2);
  overflow: hidden;
}

.mapa-container iframe {
  filter: grayscale(20%) contrast(1.1);
}

/* Inscrições */
.inscricoes-section {
  margin-top: 4rem;
  padding-top: 3rem;
  border-top: 3px solid var(--accent-orange);
}

.inscricoes-section h2 {
  text-align: center;
  font-size: 2.5rem;
  color: var(--text-primary);
  margin-bottom: 3rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-shadow: 2px 2px 8px rgba(255, 107, 53, 0.3);
}

.categorias-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.categoria-card {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  border: 2px solid rgba(255, 107, 53, 0.2);
}

.categoria-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 32px rgba(255, 107, 53, 0.3);
  border-color: var(--accent-orange);
}

.categoria-card.destaque {
  border-color: var(--accent-gold);
  background: linear-gradient(135deg, var(--bg-secondary) 0%, #2a2015 100%);
  box-shadow: 0 8px 32px rgba(255, 215, 0, 0.2);
}

.categoria-card.selecionada {
  border-color: var(--accent-orange);
  background: linear-gradient(135deg, var(--bg-secondary) 0%, #2a1510 100%);
  box-shadow: 0 12px 32px rgba(255, 107, 53, 0.4);
}

.badge-destaque {
  position: absolute;
  top: -10px;
  right: 20px;
  background: var(--accent-gold);
  color: #000;
  padding: 0.3rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: bold;
  text-transform: uppercase;
  box-shadow: 0 4px 12px rgba(255, 215, 0, 0.4);
}

.categoria-card h3 {
  font-size: 1.8rem;
  color: var(--text-primary);
  margin: 0 0 1rem 0;
  text-align: center;
}

.preco {
  text-align: center;
  margin: 1rem 0;
}

.preco .valor {
  font-size: 2.5rem;
  font-weight: bold;
  color: var(--accent-orange);
  text-shadow: 0 0 10px rgba(255, 107, 53, 0.3);
}

.descricao {
  text-align: center;
  color: var(--text-secondary);
  margin: 1rem 0;
  font-size: 1.1rem;
}

.beneficios-lista {
  list-style: none;
  padding: 0;
  margin: 1.5rem 0;
}

.beneficios-lista li {
  padding: 0.5rem 0;
  color: var(--text-secondary);
  position: relative;
  padding-left: 1.5rem;
}

.beneficios-lista li::before {
  content: "✓";
  position: absolute;
  left: 0;
  color: var(--accent-orange);
  font-weight: bold;
  font-size: 1.2rem;
}

.aviso-camisetas {
  text-align: center;
  margin-top: 1rem;
  padding: 0.5rem;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 8px;
  color: var(--accent-orange);
  font-weight: 600;
  font-size: 0.9rem;
  border: 1px solid rgba(255, 107, 53, 0.3);
}

.camiseta-preview {
  text-align: center;
  margin: 2rem auto;
  max-width: 400px;
  padding: 2rem;
  background: var(--bg-secondary);
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.camiseta-preview img {
  width: 100%;
  max-width: 300px;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
  border: 2px solid rgba(255, 107, 53, 0.3);
}

.camiseta-preview p {
  margin-top: 1rem;
  color: var(--text-secondary);
  font-style: italic;
}

.formulario-inscricao {
  max-width: 600px;
  margin: 3rem auto;
  padding: 2rem;
  background: var(--bg-secondary);
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.formulario-inscricao h3 {
  text-align: center;
  color: var(--text-primary);
  margin-bottom: 2rem;
  font-size: 1.8rem;
  text-shadow: 2px 2px 8px rgba(255, 107, 53, 0.3);
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
  font-weight: 600;
}

.form-group input,
.form-group select {
  width: 100%;
  padding: 0.8rem;
  border: 2px solid rgba(255, 107, 53, 0.3);
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s ease;
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--accent-orange);
  box-shadow: 0 0 10px rgba(255, 107, 53, 0.3);
}

.form-group input::placeholder {
  color: var(--text-muted);
}

.form-resumo {
  background: var(--bg-tertiary);
  padding: 1.5rem;
  border-radius: 8px;
  margin: 2rem 0;
  border-left: 4px solid var(--accent-orange);
}

.form-resumo p {
  margin: 0.5rem 0;
  color: var(--text-secondary);
}

.btn-inscrever {
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--accent-orange) 0%, #ff8c42 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1.2rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 2px;
  box-shadow: 0 4px 16px rgba(255, 107, 53, 0.4);
}

.btn-inscrever:hover {
  background: linear-gradient(135deg, #ff8c42 0%, var(--accent-orange) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 107, 53, 0.6);
}

/* Pagamento PIX */
.pagamento-section {
  max-width: 800px;
  margin: 0 auto;
}

.pagamento-container {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 3rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.pagamento-container h2 {
  text-align: center;
  font-size: 2.5rem;
  color: var(--text-primary);
  margin-bottom: 2rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-shadow: 2px 2px 8px rgba(255, 107, 53, 0.3);
}

.pagamento-sucesso {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(40, 167, 69, 0.1) 100%);
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  border: 2px solid #28a745;
}

.icone-sucesso {
  font-size: 2rem;
  background: #28a745;
  color: white;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.pagamento-sucesso p {
  margin: 0;
  color: #28a745;
  font-size: 1.2rem;
  font-weight: 600;
}

.dados-inscricao {
  background: var(--bg-tertiary);
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  border-left: 4px solid var(--accent-orange);
}

.dados-inscricao h3 {
  color: var(--text-primary);
  margin-bottom: 1rem;
  font-size: 1.5rem;
}

.dados-inscricao p {
  margin: 0.5rem 0;
  color: var(--text-secondary);
}

.valor-destaque {
  font-size: 1.3rem;
  color: var(--accent-orange);
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 2px solid rgba(255, 107, 53, 0.3);
}

.qrcode-container {
  text-align: center;
  margin: 2rem 0;
  padding: 2rem;
  background: var(--bg-tertiary);
  border-radius: 12px;
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.qrcode-container h3 {
  color: var(--text-primary);
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
}

.qrcode-box {
  display: inline-block;
  padding: 1.5rem;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);
}

.instrucao {
  margin-top: 1rem;
  color: var(--text-secondary);
  font-style: italic;
}

.codigo-pix-container {
  margin: 2rem 0;
}

.codigo-pix-container h3 {
  color: var(--text-primary);
  margin-bottom: 1rem;
  font-size: 1.5rem;
  text-align: center;
}

.codigo-pix-box {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.codigo-pix-input {
  flex: 1;
  padding: 1rem;
  border: 2px solid rgba(255, 107, 53, 0.3);
  border-radius: 8px;
  font-size: 0.9rem;
  font-family: monospace;
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.btn-copiar {
  padding: 1rem 2rem;
  background: var(--accent-orange);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
  box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
}

.btn-copiar:hover {
  background: #ff8c42;
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(255, 107, 53, 0.5);
}

.instrucoes-pagamento {
  margin: 2rem 0;
  padding: 1.5rem;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 8px;
  border-left: 4px solid var(--accent-gold);
}

.instrucoes-pagamento h3 {
  color: var(--accent-gold);
  margin-bottom: 1rem;
  font-size: 1.3rem;
}

.instrucoes-pagamento ol {
  margin: 0;
  padding-left: 1.5rem;
  color: var(--text-secondary);
}

.instrucoes-pagamento li {
  margin: 0.5rem 0;
  line-height: 1.6;
}

.instrucoes-pagamento li strong {
  color: #25D366;
  font-size: 1.05em;
}

.comprovante-whatsapp {
  margin: 2rem 0;
  padding: 2rem;
  background: linear-gradient(135deg, rgba(37, 211, 102, 0.15) 0%, rgba(18, 140, 126, 0.1) 100%);
  border-radius: 12px;
  border: 2px solid #25D366;
  box-shadow: 0 4px 16px rgba(37, 211, 102, 0.2);
}

.comprovante-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.comprovante-icon {
  font-size: 2.5rem;
}

.comprovante-header h3 {
  color: #25D366;
  margin: 0;
  font-size: 1.5rem;
  text-shadow: 0 0 10px rgba(37, 211, 102, 0.3);
}

.comprovante-texto {
  color: var(--text-secondary);
  margin: 1rem 0 1.5rem 0;
  font-size: 1.1rem;
  line-height: 1.6;
}

.btn-enviar-comprovante {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  width: 100%;
  padding: 1.2rem 2rem;
  background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  color: white;
  text-decoration: none;
  border-radius: 12px;
  font-size: 1.2rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.btn-enviar-comprovante:hover {
  background: linear-gradient(135deg, #128C7E 0%, #25D366 100%);
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(37, 211, 102, 0.6);
  text-decoration: none;
}

.btn-enviar-comprovante .whatsapp-icon {
  font-size: 1.8rem;
}

.numero-whatsapp {
  font-size: 1rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2px;
}

.botoes-acoes {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
}

.btn-voltar-inicio {
  width: 100%;
  padding: 1rem 2rem;
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border: 2px solid rgba(255, 107, 53, 0.3);
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-voltar-inicio:hover {
  background: var(--bg-secondary);
  border-color: var(--accent-orange);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
}

.btn-compartilhar {
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  box-shadow: 0 4px 16px rgba(37, 211, 102, 0.3);
}

.btn-compartilhar:hover {
  background: linear-gradient(135deg, #128C7E 0%, #25D366 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(37, 211, 102, 0.5);
}

.whatsapp-icon {
  font-size: 1.3rem;
}

.btn-nova-inscricao {
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--accent-orange) 0%, #ff8c42 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(255, 107, 53, 0.4);
}

.btn-nova-inscricao:hover {
  background: linear-gradient(135deg, #ff8c42 0%, var(--accent-orange) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 107, 53, 0.6);
}

/* Footer */
.evento-footer {
  background: #000000;
  color: var(--text-secondary);
  text-align: center;
  padding: 2rem;
  margin-top: 3rem;
  border-top: 2px solid var(--accent-orange);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.logo-ieq-footer {
  width: 100px;
  height: auto;
  filter: drop-shadow(0 4px 12px rgba(255, 107, 53, 0.4));
  margin-bottom: 0.5rem;
}

.evento-footer p {
  margin: 0.3rem 0;
  font-size: 1.1rem;
  line-height: 1.6;
}

.footer-campo {
  color: var(--accent-orange);
  font-weight: 600;
  font-size: 1rem;
}

.footer-slogan {
  color: var(--accent-gold);
  font-style: italic;
  font-size: 0.95rem;
  margin-top: 0.5rem;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
}

/* Toast */
.toast {
  position: fixed;
  top: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 2rem;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.7);
  z-index: 9999;
  min-width: 300px;
  max-width: 500px;
  animation: slideDown 0.3s ease-out;
  backdrop-filter: blur(10px);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-100px);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

.toast-erro {
  background: linear-gradient(135deg, rgba(220, 53, 69, 0.95) 0%, rgba(180, 20, 35, 0.95) 100%);
  border: 2px solid #dc3545;
}

.toast-sucesso {
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.95) 0%, rgba(20, 120, 40, 0.95) 100%);
  border: 2px solid #28a745;
}

.toast-icon {
  font-size: 1.8rem;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
}

.toast p {
  margin: 0;
  color: white;
  font-size: 1rem;
  font-weight: 500;
  line-height: 1.5;
}

